<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.shu.styluo.collegeentranceexamination">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_instead"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.activity.SplashActivity"
            android:theme="@style/Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.GuideActivity"/>
        <activity android:name=".view.activity.MainActivity"/>
        <activity android:name=".view.activity.CollegeDetailActivity"
            android:parentActivityName=".view.activity.MainActivity"/>

        <activity android:name=".view.activity.MajorSimulationActivity"
            android:parentActivityName=".view.activity.MainActivity"/>

        <activity android:name=".view.activity.MajorListActivity"
            android:parentActivityName=".view.activity.MainActivity"/>
    </application>

</manifest>