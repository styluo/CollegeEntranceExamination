<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="24dp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/major_detail_cv_margin">
            <LinearLayout
                style="@style/Widget.CardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="主要课程"
                    android:text="@string/tv_majorinfo_detail_main_course"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                <TextView
                    android:id="@+id/tv_majordetail_maincourse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="哲学"
                    android:text="@string/tv_majorinfo_detail_default"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/major_detail_cv_margin">
            <LinearLayout
                style="@style/Widget.CardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="专业培养目标"
                    android:text="@string/tv_majorinfo_detail_main_goal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                <TextView
                    android:id="@+id/tv_majordetail_maingoal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="马克思主义"
                    android:text="@string/tv_majorinfo_detail_default"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/major_detail_cv_margin">
            <LinearLayout
                style="@style/Widget.CardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="专业培养能力"
                    android:text="@string/tv_majorinfo_detail_main_ability"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                <TextView
                    android:id="@+id/tv_majordetail_mainability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="掌握马克思主义哲学"
                    android:text="@string/tv_majorinfo_detail_default"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btn_majordetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_majorinfo_detail"
            android:background="@drawable/btn_majorinfo_selector"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="center"/>

    </LinearLayout>

</ScrollView>