<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorTransparent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--消除启动白屏-->
    <style name="Splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_start</item>
    </style>

    <!--MainActivity中TabLayout样式设置-->
    <style name="MainTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">@color/gray_dark</item>
        <item name="tabSelectedTextColor">@color/orange</item>
        <item name="tabIndicatorColor">@color/orange</item>
    </style>

    <!--MainActivity中CardView样式设置-->
    <style name="MainCardView" parent="CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <!---->
</resources>
