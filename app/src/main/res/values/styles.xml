<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorTransparent</item>
        <item name="colorAccent">@color/orange</item>
    </style>

    <!--消除启动白屏-->
    <style name="Splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_start</item>
    </style>

    <!--MainActivity中TabLayout样式设置-->
    <style name="MainTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">@color/gray_dark</item>
        <item name="tabSelectedTextColor">@color/orange</item>
        <item name="tabIndicatorColor">@color/orange</item>
    </style>

    <!--MainActivity中CardView样式设置-->
    <style name="MainCardView" parent="CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <!--CollegeDetailActivity-->
    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--MajorInfoList-->
    <style name="MajoInfo.Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--WishDetailListActivity-->
    <style name="WishDetail.Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--MajorSimulationActivity-->
    <style name="SimulationCardView" parent="CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!--CollegeListActivity-->
    <style name="CollegeList.Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:orientation">vertical</item>
    </style>


    <!--LoadingProgressDialog-->
    <style name="LoadingProgressDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorAccent">@color/orange</item>
    </style>

    <!--RecommendCollegeActivity-->
    <style name="Recommend.Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>
